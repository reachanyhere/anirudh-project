{
  "testEnvironment": "jsdom",
  "collectCoverageFrom": [
    "src/**/*.{js,jsx}",
    "!src/index.js",
    "!node_modules/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"],
  "testMatch": [
    "**/__tests__/**/*.{js,jsx}",
    "**/?(*.)+(spec|test).{js,jsx}"
  ],
  "verbose": true,
  "transform": {
    "^.+\\.(js|jsx)$": "babel-jest"
  },
  "moduleNameMapper": {
    "\\.(css|less|scss|sass)$": "identity-obj-proxy"
  },
  "setupFilesAfterEnv": ["<rootDir>/src/setupTests.js"]
}