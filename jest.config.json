{
  "testEnvironment": "node",
  "collectCoverageFrom": [
    "app.js",
    "!node_modules/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"],
  "testMatch": [
    "**/__tests__/**/*.js",
    "**/?(*.)+(spec|test).js"
  ],
  "verbose": true,
  "transform": {
    "^.+\\.js$": "babel-jest"
  }
}
